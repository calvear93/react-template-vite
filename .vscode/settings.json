{
	"[html][json][jsonc][markdown][css][less][scss]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascript][typescript][javascriptreact][typescriptreact]": {
		"editor.defaultFormatter": "dbaeumer.vscode-eslint"
	},
	"css.lint.unknownAtRules": "ignore",
	"editor.detectIndentation": true,
	"editor.linkedEditing": true,
	"editor.rulers": [80, 100],
	"eslint.format.enable": true,
	"eslint.lintTask.enable": true,
	"eslint.probe": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact"
	],
	"eslint.trace.server": "off",
	"eslint.useESLintClass": true,
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact"
	],
	"explorer.fileNesting.enabled": true,
	"explorer.fileNesting.expand": false,
	"explorer.fileNesting.patterns": {
		"*.cts": "${capture}.cts.*",
		"*.env.json": "${capture}.*.env.json",
		"*.json": "${capture}.json",
		"*.mts": "${capture}.mts.*",
		"*.ts": "${capture}.*",
		"*.tsx": "${capture}.*",
		".copilotrc.json": ".copilotignore, llms.txt",
		".gitignore": ".gitattributes",
		"dockerfile": ".dockerignore, docker-compose.*, dockerfile*",
		"eslint.config.js": ".prettierrc*, .prettierignore, .stylelintrc*, .stylelintignore",
		"main.ts": "*.config.ts, *.d.ts",
		"main.tsx": "*.config.ts, *.d.ts",
		"package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, pnpm-workspace.yaml, package.*.json, .npmrc, .pnp.cjs",
		"readme*": "changelog.md, license.md, code_of_conduct.md, contributing.md, architecture.md, exemplars.md",
		"tsconfig.json": "tsconfig.*.json",
		"vite.config.ts": "vitest.config.ts, unocss.config.ts, stryker.conf.*"
	},
	"explorer.incrementalNaming": "smart",
	"explorer.sortOrder": "type",
	"files.associations": {
		"*.md": "markdown",
		"tsconfig.*.json": "jsonc",
		"tsconfig.json": "jsonc"
	},
	"files.exclude": {
		"**/*.log": true,
		"**/*.tsbuildinfo": true,
		"**/.DS_Store": true,
		"**/.eslintcache": true,
		"**/.git": true,
		"**/.history": true,
		"**/.rollup.cache": true,
		"**/.stryker-tmp": true,
		"**/.stylelintcache": true,
		"**/.svn": true,
		"**/.swc": true,
		"**/.wireit": true,
		"**/desktop.ini": true,
		"**/node_modules": true,
		"**/obj": true
	},
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,
	"files.watcherExclude": {
		"**/*.log": true,
		"**/.DS_Store": true,
		"**/.git/objects/**": true,
		"**/.rollup.cache": true,
		"**/.stryker-tmp": true,
		"**/.swc": true,
		"**/.vscode": true,
		"**/build": true,
		"**/coverage": true,
		"**/desktop.ini": true,
		"**/dist": true,
		"**/node_modules/**": true,
		"**/package-lock.json": true,
		"**/pnpm-lock.yaml": true
	},
	"html.autoClosingTags": true,
	"javascript.autoClosingTags": true,
	"javascript.preferences.quoteStyle": "single",
	"npm.packageManager": "pnpm",
	"npm.scriptRunner": "pnpm",
	"prettier.useTabs": true,
	"scss.lint.unknownAtRules": "ignore",
	"search.exclude": {
		"**/.rollup.cache": true,
		"**/.stryker-tmp": true,
		"**/.swc": true,
		"**/.vscode": true,
		"**/.wireit": true,
		"**/build": true,
		"**/coverage": true,
		"**/dist": true,
		"**/package-lock.json": true,
		"**/pnpm-lock.yaml": true
	},
	"stylelint.packageManager": "pnpm",
	"stylelint.snippet": ["css", "postcss", "scss", "sass"],
	"stylelint.validate": ["css", "postcss", "scss", "sass"],
	"typescript.autoClosingTags": true,
	"typescript.disableAutomaticTypeAcquisition": true,
	"typescript.preferences.importModuleSpecifier": "shortest",
	"typescript.preferences.importModuleSpecifierEnding": "js",
	"typescript.preferences.jsxAttributeCompletionStyle": "auto",
	"typescript.preferences.preferTypeOnlyAutoImports": true,
	"typescript.preferences.quoteStyle": "single",
	"typescript.preferences.renameMatchingJsxTags": true,
	"typescript.preferences.useAliasesForRenames": false,
	"typescript.suggest.autoImports": true,
	"typescript.tsdk": "node_modules\\typescript\\lib",
	"typescript.validate.enable": true,
	"yaml.format.singleQuote": true
}
